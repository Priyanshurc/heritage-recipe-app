# Database Configuration
# For MongoDB Atlas, use: mongodb+srv://username:password@cluster.mongodb.net/database_name
# For local MongoDB, use: mongodb://localhost:27017/heritage-recipe-db
MONGODB_URI=mongodb+srv://YOUR_USERNAME:YOUR_PASSWORD@cluster.mongodb.net/heritage_recipes?retryWrites=true&w=majority

# Server Configuration
PORT=5000

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRE=7d

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000